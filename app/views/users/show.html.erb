<!-- ユーザーの詳細 -->
<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %><br>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr><br>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>

  <p><%= link_to "プロフィール編集", edit_user_path %></p>
</div>

<!-- ユーザーの投稿一覧 -->
<div>
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <tb><%= link_to (image_tag book.user.get_profile_image(80,80)), user_path(@user) %></tb>
          <tb><%= link_to book.title, book_path(book.id) %></tb>
          <tb><%= book.body %></tb>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>