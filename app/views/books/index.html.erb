<div>
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <tb><%= link_to image_tag(book.user.get_profile_image(80,80)) %></tb>
          <tb><%= link_to book.title, book_path(book.id) %></tb>
          <tb><%= book.body %></tb>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>